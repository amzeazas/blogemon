{{#if updatePostForm}}
<h2>Update {{post.title}}</h2>
<div>
  <form>
    <div class="form-group">
      <label for="title">Title</label>
      {{input value=post.title id="title" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="author">Author</label>
      {{input value=post.author id="author" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="text">Text</label>
      {{textarea value=post.text id="text" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="image">Image URL</label>
      {{input value=post.image id="image" class="form-control"}}
    </div>

    <button class="btn btn-default" {{action 'update' post}}>Save</button>
  </form>
</div>
{{else}}
  <button class="btn btn-warning"{{action 'updatePostForm'}}>Update Post</button>
{{/if}}
