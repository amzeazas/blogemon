{{#if updatePostForm}}
<h2>Update {{post.title}}</h2>
<div>
  <form>
    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title" placeholder=post.title class="form-control"}}
    </div>

    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author" placeholder=post.author class="form-control"}}
    </div>

    <div class="form-group">
      <label for="text">Text</label>
      {{textarea value=text id="text" placeholder=post.text class="form-control"}}
    </div>

    <div class="form-group">
      <label for="image">Image URL</label>
      {{input value=image id="image" placeholder=post.image class="form-control"}}
    </div>

    <button class="btn btn-default" {{action 'update' post}}>Save</button>
  </form>
</div>
{{else}}
  <button class="btn btn-warning"{{action 'updatePostForm'}}>Update Post</button>
{{/if}}
