{{#if addNewPost}}
  <h2>Add a Post!</h2>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title" class="form-control"}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" class="form-control"}}
      </div>

      <div class="form-group">
        <label for="text">Text</label>
        {{textarea value=text id="text" class="form-control"}}
      </div>

      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image" class="form-control"}}
      </div>

      <button class="btn btn-default" {{action 'save1'}}>Add Post</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-primary"{{action 'postFormShow'}}>New Post</button>
{{/if}}
