{{#if addNewComment}}
  <h1>New Comment</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="user">Your Name</label>
        {{input value=user id="user" class="form-control"}}
      </div>

      <div class="form-group">
        <label for="text">Comment</label>
        {{textarea value=text id="text" class="form-control"}}
      </div>

      <button class="btn btn-default" {{action 'save1'}}>Add Comment</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-primary"{{action 'commentFormShow'}}>New Comment</button>
{{/if}}
